# Database configuration
DATABASE_URL=sqlite:///db.sqlite3  # This should match your SQLAlchemy setup

# Flask secret key (ensure this is set in production to a strong value)
SECRET_KEY=your_secret_key  # Replace with a strong, secure key in production, e.g., a long random string

# API keys
CURRENCY_API_KEY=feec8b7611be09b0cad59a2b  # Replace with your actual currency conversion API key

# Flask settings (optional, depending on your setup)
FLASK_ENV=development  # Set to 'production' for a production environment
FLASK_APP=backend  # Adjust this to point to your main app module or script, e.g., backend or run.py

# Optional CORS settings for security in production
CORS_ALLOWED_ORIGINS=*  # Change to specific origins for better security in production

# Optional logging level settings
LOG_LEVEL=DEBUG  # Set to INFO or WARNING for production to reduce verbosity
